<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Lấy giá trị từ Local Storage
    var status = localStorage.getItem('status');
    var priority = localStorage.getItem('priority');
    var severity = localStorage.getItem('severity');
    var issueType = localStorage.getItem('issueType');
    var environment = localStorage.getItem('environment');
    var assignedTo = localStorage.getItem('assignedTo');

    // Đặt giá trị vào các trường tương ứng
    document.getElementById('status').innerText = status;
    document.getElementById('priority').innerText = priority;
    document.getElementById('severity').innerText = severity;
    document.getElementById('issueType').innerText = issueType;
    document.getElementById('environment').innerText = environment;
    document.getElementById('assignedTo').innerText = assignedTo;

  
  });
</script>
