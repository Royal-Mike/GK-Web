<main>
    <!-- Page hiện tại -->
    <div class="container-fluid">
        <div class="row">
            <!-- Side bar -->
            {{> sidebar}}
            <!-- Main content -->
            <div class="col-md-11 col-lg-11 col-xl-11 bg-grey px-4">

                {{> project-nav-bar}}

                <div class="container-fluid bg-light rounded-3">
                    <div class="align-items-center d-flex">
                        <div class="d-inline-block">
                            <h5 class="ms-4 my-3">Issues</h5>
                        </div>

                        <div class="d-inline-block ms-auto fw-bold d-flex align-items-center">
                            <div class="mx-3">
                                <i class="bi bi-share"></i>
                                Share
                            </div>
                            <div class="mx-3">
                                <i class="bi bi-bar-chart"></i>
                                Report
                            </div>
                            <div class="mx-3">
                                <i class="bi bi-cloud-upload"></i>
                                Import
                            </div>
                            <div class="mx-3">
                                <i class="bi bi-cloud-download"></i>
                                Export
                            </div>
                        </div>

                        <div class="d-inline-block me-3">
                            <button class="mx-4 my-3 d-flex btn custom-bold-btn" data-bs-toggle="modal"
                                data-bs-target="#addIssueModal">
                                <i class="bi bi-plus"></i> Add Issue
                            </button>
                        </div>

                        <div class="mx-3">
                            <i class="bi bi-book"></i>
                            <span class="fw-bold">Guide</span>
                        </div>
                    </div>
                </div>


                <div class="container-fluid bg-light mt-4 py-2 rounded-3">
                    <div class="row align-items-center">

                        <div class="col-auto d-flex">
                            <h5 class="ms-4 my-3 align-self-center">Show</h5>

                            <div class="dropdown ms-3 align-self-center">
                                <div class="dropdown">
                                    <button class="btn dropdown-toggle p-1 border" type="button" id="dropdownMenu1"
                                        data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 50px">
                                        5
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                        <li>
                                            <button class="dropdown-item" type="button">5</button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item" type="button">15</button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item" type="button">20</button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-auto d-flex">
                            <h5 class="my-3 align-self-center">Sort</h5>
                            <div class="dropdown ms-3 align-self-center">
                                <button class="btn dropdown-toggle border" type="button" id="dropdownMenu1"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Created Date
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <li>
                                        <button class="dropdown-item" type="button">Priority</button>
                                    </li>
                                    <li>
                                        <button class="dropdown-item" type="button">Code</button>
                                    </li>
                                </ul>
                            </div>

                            <div class="dropdown ms-3 me-1 align-self-center">
                                <button class="btn dropdown-toggle border" type="button" id="dropdownMenu1"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Desc
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <li>
                                        <button class="dropdown-item" type="button">Asc</button>
                                    </li>
                                </ul>
                            </div>
                        </div>


                        <div class="col-5">
                            <div class="input-group rounded">
                                <input type="search" class="form-control rounded" placeholder="Search by ID/Title issue"
                                    aria-label="Search" aria-describedby="search-addon" />
                                <span class="input-group-text border-0" id="search-addon">
                                    <i class="fas fa-search"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-2 d-flex align-items-center">
                            <button class="border-0 rounded-circle p-2 text-muted ms-auto">
                                <i class="bi bi-chevron-double-left"></i>
                            </button>
                            <div class="d-flex justify-content-center align-items-center mx-3"
                                style="width: 50px; height: 50px">
                                <h2 class="mb-0">1</h2>
                            </div>
                            <button class="border-0 rounded-circle p-2 text-muted me-3">
                                <i class="bi bi-chevron-double-right"></i>
                            </button>
                        </div>
                    </div>
                </div>







                <div class="container-fluid bg-light py-3">
                    <div class="row">
                        <div class="col fw-bold">Code</div>
                        <div class="col-3 fw-bold">Title</div>
                        <div class="col fw-bold">Created By</div>
                        <div class="col fw-bold">Assigned to</div>
                        <div class="col fw-bold">Status</div>
                        <div class="col fw-bold">Priority</div>
                        <div class="col-2 fw-bold">Created date</div>
                        <div class="col fw-bold">Action</div>
                    </div>
                </div>

                <div class="container-fluid bg-light py-3 mb-3 rounded-3">

                    {{#each issues}}
                    <a href="/project/{{../projectId}}/issues/{{this.id}}" class="text-decoration-none text-dark">
                        <div class="row">
                            <div class="col">IS00{{this.id}}</div>
                            <div class="col-3">{{this.title}}</div>
                            <div class="col">Ky Thanh</div>
                            <div class="col">{{this.assigned_to_user_id}}</div>
                            <div class="col">{{this.status}}</div>
                            <div class="col">{{this.priority}}</div>
                            <div class="col-2">{{formatDate this.created_at }}</div>
                            <div class="col d-flex">
                                <i class="bi bi-eye"></i>
                                <i class="bi bi-pencil mx-3"></i>
                                <i class="bi bi-trash"></i>
                            </div>
                        </div>
                    </a>
                    <hr />
                    {{/each}}


                    <div class="row mt-5 align-content-center">
                        <div class="col">
                            <h4>Showing 1 to 5 of 5 Issue</h4>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="addIssueModal" tabindex="-1" aria-labelledby="addIssueModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addIssueModalLabel">Add New Issue</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addIssueForm">
                        <div class="mb-3">
                            <label for="issueTitle" class="form-label">Title</label>
                            <input type="text" class="form-control" id="issueTitle" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="issueDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="issueDescription" name="description" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="issueStatus" class="form-label">Status</label>
                            <select class="form-select" id="issueStatus" name="status" required>
                                <option value="open">Open</option>
                                <option value="in_progress">In Progress</option>
                                <option value="resolved">Resolved</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="issuePriority" class="form-label">Priority</label>
                            <select class="form-select" id="issuePriority" name="priority" required>
                                <option value="low">Low</option>
                                <option value="medium">Medium</option>
                                <option value="high">High</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</main>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script>
    $('#addIssueForm').on('submit', function (e) {
        e.preventDefault();
        var data = {
            title: $('#issueTitle').val(),
            description: $('#issueDescription').val(),
            status: $('#issueStatus').val(),
            priority: $('#issuePriority').val()
        };
        // AJAX call to server to add issue
        $.post('/projects/{{projectId}}/issues/create', data)
  .done(function (response) {
      if (response.success) {
          $('#addIssueModal').modal('hide');
          // Cập nhật danh sách issues tại đây nếu cần
      } else {
          alert('Error: ' + response.message);
      }
  })
  .fail(function () {
      alert('Server error: Could not create issue.');
  });
    });
</script>